# Server Configuration
PORT=3000
BULL_BOARD_PORT=3001
NODE_ENV=production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_password_here

# Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Job Settings
JOB_TTL_HOURS=24
CLEANUP_CRON=*/15 * * * *
MAX_CONCURRENT_JOBS=2
MAX_RETRIES=2

# Conversion Settings
DEFAULT_TOLERANCE=0.01
CONVERSION_TIMEOUT=300000  # 5 minutes in ms
REPAIR_MESH=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info
